@model ProductViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TblProducts</h4>
    <hr />
    <div class="row">
        <div class="col-sm-2">
            <label for="cat">Category Name</label>
        </div>
        <div class="col-sm-10">
            <h4 id="cat">@Model.ProductCategory.CategoryName</h4>
        </div>

        <div class="col-sm-2">
            <label for="prod">Product Name</label>
        </div>
        <div class="col-sm-10">
            <h4 id="prod">@Model.ProductName</h4>
        </div>

        <div class="col-sm-2">
            <label for="price">Product Price</label>
        </div>
        <div class="col-sm-10">
            <h4 id="price">@Model.ProductPrice</h4>
        </div>


        <div class="col-sm-10" style="text-align: center;margin-top: 36px;">
        
            <img src="~/images/@Model.ProductImage" style="height:200px;" />
        </div>
      
       
    </div>
    <form asp-action="Delete" asp-controller="Home" asp-route-id="@Model.ProductId">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
