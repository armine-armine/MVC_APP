@model ProductEditViewModel

@{
    ViewBag.Title = "Edit Products";
}
<form asp-action="Edit" asp-controller="Product" enctype="multipart/form-data">
    <div class="form-group">
       
        <input hidden type="text" asp-for="@Model.Product.ProductId" class="form-control" />
        <span asp-validation-for="@Model.Product.ProductId" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Product.ProductName" class="control-label"></label>
        <input type="text" asp-for="@Model.Product.ProductName" class="form-control" />
        <span asp-validation-for="@Model.Product.ProductName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Product.ProductPrice" class="control-label"></label>
        <input type="number" asp-for="@Model.Product.ProductPrice" class="form-control" />
        <span asp-validation-for="@Model.Product.ProductPrice" class="text-danger"></span>

    </div>
    <div class="form-group">
        @*<label asp-for="ProductImage" class="control-label"></label>*@
        <img src="~/images/@Model.Product.ProductImage" style="height:70px; width:70px" />
        <input type="file" name="file"  />
        <span asp-validation-for="@Model.Product.ProductImage" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <select asp-for="@Model.Product.ProCatId"
                asp-items="@(new SelectList(Model.Category,"CategoryId","CategoryName"))">
            <option>Please select one</option>
        </select>
    </div>
    
    <br />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
